<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recurring_deposits_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recurring_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="24dp"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/kepler_font"
        android:text="@string/recurring_text"
        android:background="#B1C1DA"/>

    <TextView
        android:id="@+id/deposit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recurring_text_view"
        android:paddingStart="24dp"
        android:paddingBottom="16dp"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/kepler_font"
        android:text="@string/deposits_text"
        android:background="#B1C1DA"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/goals_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/deposit_text_view"
        android:layout_alignParentStart="true" />

</RelativeLayout>
